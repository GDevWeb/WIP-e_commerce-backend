# Server
NODE_ENV=production
PORT=3000

# Database (Neon)
DATABASE_URL=postgresql://user:pass@xxx.neon.tech/dbname?sslmode=require

# Redis (Upstash) - Choose ONE option
# Option A (REST API - Recommended)
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_token
# Option B (Compatible with existing code)
REDIS_URL=redis://xxx@xxx.upstash.io:6379

# JWT
JWT_SECRET=your-secret-min-32-characters-long
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt
BCRYPT_ROUNDS=10

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.com
