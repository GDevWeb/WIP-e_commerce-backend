# Development Local Config
NODE_ENV=development
PORT=3000

# Neon PostgreSQL (cloud)
DATABASE_URL="postgresql://user:pass@ep-xyz.region.aws.neon.tech/dbname?sslmode=require"

# Redis Configuration (Upstash or Local)
REDIS_URL="rediss://default:password@your-upstash-instance.upstash.io:6379"

# Cloudinary
CLOUDINARY_CLOUD_NAME="xxx"
CLOUDINARY_API_KEY="xxx"
CLOUDINARY_API_SECRET="xxx"

# JWT CONFIGURATION
JWT_SECRET="generate_a_strong_secret_here"
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET="generate_another_strong_secret_here"
JWT_REFRESH_EXPIRES_IN=30d

# BCRYPT
BCRYPT_ROUNDS=10

# CART CONFIGURATION
CART_TTL=604800 # 7 days

# CORS
ALLOWED_ORIGINS="http://localhost:3000,https://your-frontend.vercel.app"